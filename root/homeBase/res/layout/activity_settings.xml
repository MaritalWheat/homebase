<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    tools:context="...app.android.homeBase.SettingsActivity"
    android:background="@color/bbutton_primary_disabled"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="64dp">
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="26dp"></RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/settings_username_et"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/settings_change_username"
                bootstrapbutton:bb_size="default"
                bootstrapbutton:bb_type="primary"
                bootstrapbutton:bb_icon_right="fa-user"
                android:onClick="onChangeUsernameClick"
                android:layout_centerHorizontal="true">
            </com.beardedhen.androidbootstrap.BootstrapButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center">
            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/settings_email_et"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/settings_change_email"
                bootstrapbutton:bb_size="default"
                bootstrapbutton:bb_type="primary"
                bootstrapbutton:bb_text_alignment="center"
                bootstrapbutton:bb_icon_right="fa-envelope"
                android:onClick="onChangeEmailClick"
                android:layout_alignParentTop="true">
            </com.beardedhen.androidbootstrap.BootstrapButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="25dp"></RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center">>
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New House Anchor"
                bootstrapbutton:bb_size="default"
                bootstrapbutton:bb_type="primary"
                bootstrapbutton:bb_icon_right="fa-anchor"
                android:onClick="updateHouseLocation"
                >
            </com.beardedhen.androidbootstrap.BootstrapButton>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center">
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/settings_log_out"
                bootstrapbutton:bb_size="default"
                bootstrapbutton:bb_type="warning"
                bootstrapbutton:bb_icon_right="fa-sign-out"
                android:onClick="onLogoutClick"
                >
            </com.beardedhen.androidbootstrap.BootstrapButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center">>
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/settings_delete_account"
                bootstrapbutton:bb_size="default"
                bootstrapbutton:bb_type="danger"
                bootstrapbutton:bb_icon_right="fa-trash-o"
                android:onClick="onDeleteAccountClick"
                >
            </com.beardedhen.androidbootstrap.BootstrapButton>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>