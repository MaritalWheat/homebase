<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:fontFamily="fontawesome-webfont.ttf"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"></RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@id/login_username_etext"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    bootstrapbutton:be_roundedCorners="true"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:hint="@string/login_username_hint"
                    android:textColor="@android:color/black"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    />

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@id/login_password_etext"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    bootstrapbutton:be_roundedCorners="true"
                    android:gravity="center"
                    android:hint="@string/login_password_hint"
                    android:textColor="@android:color/black"
                    android:password="true"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="@string/login_login_text"
                    android:textAlignment="center"
                    bootstrapbutton:bb_roundedCorners="true"
                    bootstrapbutton:bb_size="default"
                    bootstrapbutton:bb_type="primary"
                    bootstrapbutton:bb_text_alignment="center"
                    bootstrapbutton:bb_icon_right="fa-chevron-right"
                    android:id="@id/login_login_button"
                    android:onClick="loginOnClick"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                </com.beardedhen.androidbootstrap.BootstrapButton>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="32dp"
                    android:id="@+id/relativeLayout"
                    android:layout_weight="0.31"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">

                </RelativeLayout>

                <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view7"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                    android:layout_marginRight="169dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


                <View
                    android:layout_height="fill_parent"
                    android:layout_width="10dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view8"
                    android:layout_alignTop="@+id/view7"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="18dp" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="125dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/house"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="182dp">

            <View
                android:layout_height="fill_parent"
                android:layout_width="10dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view5"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/login_signup_button"
                android:layout_marginBottom="18dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view6"
                android:layout_alignBottom="@id/login_signup_button"
                android:layout_marginBottom="18dp"
                android:layout_alignTop="@id/login_signup_button"
                android:layout_marginTop="24dp"
                android:layout_alignLeft="@+id/view5"
                android:layout_alignStart="@+id/view5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="149dp" />


            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/login_signup_text"
                android:textAlignment="center"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_size="default"
                bootstrapbutton:bb_type="primary"
                bootstrapbutton:bb_text_alignment="center"
                bootstrapbutton:bb_icon_right="fa-chevron-right"
                android:id="@id/login_signup_button"
                android:onClick="onSignUpClick"
                android:layout_gravity="right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
            </com.beardedhen.androidbootstrap.BootstrapButton>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>